@model IEnumerable<SistemaCadastroEleitoral.Models.Admin.AdminModel>
@using SistemaCadastroEleitoral.Models.Admin

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de administradores</h1>

<p>
    <a role="button" class="btn btn-primary" asp-action="Create">Novo administrador</a>
</p>

<div class="text-center">

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nome</th>
            <th scope="col">Login</th>
            <th scope="col">CPF</th>
            <th scope="col">Telefone</th>
            <th scope="col"></th>
        </tr>
    </thead>

    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (AdminModel adm in Model)
            {
                <tr>
                    <th scope="row">@adm.Id</th>
                    <th>@adm.NomeAdmin</th>
                    <th>@adm.Login</th>
                    <th>@adm.CPF</th>
                    <th>@adm.Fone</th>
                    <th>
                        <div class="btn-group" role="group" aria-label="Basic example">
                            <a role="button" class="btn btn-primary" asp-action="Edit" asp-route-id=@adm.Id>Editar</a>
                            <a role="button" class="btn btn-info" asp-action="Details" asp-route-id=@adm.Id>Detalhes</a> 
                        </div>  
                    </th>
                </tr>
            }
        }
    </tbody>
</table>

</div>