@model IEnumerable<SistemaCadastroEleitoral.Models.Contato.ContatoModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeContato)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LinkContato)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cadastro)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeContato)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LinkContato)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cadastro.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdContato">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdContato">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdContato">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
